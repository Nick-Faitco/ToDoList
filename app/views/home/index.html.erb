<section class="wrapper">
    <div class="container py-2">
        <div class="container">
        <%= link_to home_create_path, class: "btn btn-lg", style: "font-size: 3em; color: Tomato;", data: { bs_toggle: "tooltip", bs_placement: "top" }, title: "Create a new task" do %>
        <i class="fa fa-plus-circle"></i>
        <% end %>
        <%= link_to home_edit_path, class: "btn btn-lg", style: "font-size: 3em; color: Tomato;", data: { bs_toggle: "tooltip", bs_placement: "top" }, title: "Edit task" do %>
        <i class="fa fa-pencil"></i>
        <% end %>
        <%= link_to home_create_path, class: "btn btn-lg", style: "font-size: 3em; color: Tomato;", data: { bs_toggle: "tooltip", bs_placement: "top" }, title: "Delete task" do %>
        <i class="fa fa-trash-o"></i>
        <% end %>
        </div>
        <div class="row">
            <%@tasks.each do |task| %>
                <%= render "shared/card", :task => task %>
            <%end%>
        </div>
    </div>
</section>