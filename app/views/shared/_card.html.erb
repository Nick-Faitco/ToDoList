<div class="col-sm-12 col-md-6 col-lg-4 mb-4">
    <div class="card text-dark card-has-bg click-col"
        style="background-image:url('https://source.unsplash.com/600x900/?tech,street');">
        <img class="card-img d-none" src="https://source.unsplash.com/600x900/?tech,street" alt="Creative Manner Design Lorem Ipsum Sit Amet Consectetur dipisi?">
        <div class="card-img-overlay d-flex flex-column">
            <div class="card-body">
                <small class="card-meta mb-2"><%=task["title"]%></small>
                <%# <h4 class="card-title mt-0 "><a class="text-dark" herf="https://creativemanner.com">PLACEHOLDER</a></h4> %>
                <small><%=task["description"]%></small>
            </div>
            <div class="card-footer">
                <div class="media d-flex flex-column gap-2">
                    <div class="mr-3 rounded-circle d-flex justify-content-center align-items-center" style="width:4rem; height:4rem ;border:2px solid limegreen">
                        <%if task.completion_status == AppConstants::STATUS[:PENDING]%>
                            <i class="fa fa-battery-empty"style="color:limegreen; font-size: 2em" aria-hidden="true"></i>
                        <%end%>
                        <%if task.completion_status == AppConstants::STATUS[:STARTED]%>
                            <i class="fa fa-battery-half" style="color:limegreen; font-size: 2em" aria-hidden="true"></i>
                        <%end%>
                        <%if task.completion_status == AppConstants::STATUS[:COMPLETED]%>
                            <i class="fa fa-battery-full" style="color:limegreen; font-size: 2em" aria-hidden="true"></i>
                        <%end%>
                    </div>
                    <div class="media-body d-flex flex-row justify-content-between align-items-center">
                        <div>
                            <% if task.updated_at == task.created_at%>
                                <small><i>Created</i></small>
                                <small><%=task.created_at.strftime("%B %d, %Y")%></small>
                            <% elsif task.updated_at != task.created_at%>
                                <div>
                                    <small><i>Updated</i></small>
                                    <small><%=task.updated_at.strftime("%B %d, %Y")%></small>
                                </div>
                            <%end%>
                        </div>
                        <div class="d-flex flex-row justify-content-end gap-4">
                            <%= link_to tasks_edit_path(task), style: "font-size: 1.5em; color: rgba(0,0,0,0.3);", data: { bs_toggle: "tooltip", bs_placement: "top" }, title: "Edit task" do %>
                                <i class="fa fa-pencil"></i>
                            <% end %>
                            <%= link_to tasks_destroy_path(task), style: "font-size: 1.5em; color: rgba(0,0,0,0.3);", data: { bs_toggle: "tooltip", bs_placement: "top" }, title: "Delete task" do %>
                                <i class="fa fa-trash-o"></i>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>