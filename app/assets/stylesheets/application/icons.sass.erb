@charset "UTF-8"

@font-face
  font-family: "costco"
  src: url(<%= asset_path 'costco.eot' %>)
  src: url(<%= asset_path 'costco.eot?#iefix' %>) format("embedded-opentype"), url(<%= asset_path 'costco.woff' %>) format("woff"), url(<%= asset_path 'costco.ttf' %>) format("truetype"), url(<%= asset_path 'costco.svg' %>) format("svg")
  font-weight: normal
  font-style: normal

[data-icon]:before
  font-family: "costco" !important
  content: attr(data-icon)
  font-style: normal !important
  font-weight: normal !important
  font-variant: normal !important
  text-transform: none !important
  speak: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

[class^="costco-"]:before, [class*=" costco-"]:before
  font-family: "costco" !important
  font-style: normal !important
  font-weight: normal !important
  font-variant: normal !important
  text-transform: none !important
  speak: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.costco-arrow-down:before
  content: "\63"

.costco-arrow-left:before
  content: "\64"

.costco-arrow-right:before
  content: "\65"

.costco-close:before
  content: "\66"

.costco-collapse:before
  content: "\68"

.costco-expand:before
  content: "\69"

.costco-search:before
  content: "\6b"

.costco-selected:before
  content: "\6c"

.costco-unselected:before
  content: "\6d"

.costco-cart:before
  content: "\61"

.costco-menu:before
  content: "\62"

.costco-edit:before
  content: "\67"

.costco-loading:before
  content: "\6e"

.costco-profile:before
  content: "\6a"

.costco-checkmark:before
  content: "\6f"

.costco-warehouses:before
  content: "\70"

.costco-account:before
  content: "\71"

.costco-question:before
  content: "\72"

i
  &.costco-account,
  &.costco-arrow-left,
  &.costco-arrow-right,
  &.costco-cart,
  &.costco-checkbox,
  &.costco-checkmark,
  &.costco-close,
  &.costco-menu,
  &.costco-search,
  &.costco-warehouses
    font-family: 'costco'
    font-style: normal
    display: inline-block
    &:before
      content: '' !important
  &.costco-privacy-options
    font-style: normal
    display: flex
    flex-direction: row
    justify-content: flex-start
    svg
      position: relative
      top: 1.25px
      width: 30px
      margin-right: 8px
      margin-bottom: 2px